<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="meetingFriendStatusLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="meetingFriendStatusList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="meetingDateTime">
        <item name="android:textColor">#0005A3</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="notificationLayout">
        <item name="android:padding">5sp</item>
        <item name="android:background">@drawable/notification_background</item>
    </style>
    
    <style name="notificationList">
       <item name="android:listSelector">@drawable/notification_selector</item>
       <item name="android:divider">@android:color/transparent</item>
       <item name="android:dividerHeight">5.0sp</item>
    </style>
</resources>
