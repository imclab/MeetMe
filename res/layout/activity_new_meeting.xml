<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
		
	    <!-- Title field starts -->	
		<TextView 
		    android:id="@+id/titleText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		  	android:text="@string/titleLabel"
		    />
		<EditText 
	        android:id="@+id/titleEdit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/titleHint"
	        />
		<!-- Title field ends -->	
		<!-- Description field starts -->	
		<TextView 
		    android:id="@+id/descriptionText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		  	android:text="@string/descriptionLabel"
		    />
		<EditText 
	        android:id="@+id/descriptionEdit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/descriptionHint"
	        android:inputType="textMultiLine"
	        />
		<!-- Description field ends -->	
		<!-- Datetime field starts -->	
		<TextView 
		    android:id="@+id/dateTimeText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		  	android:text="@string/dateTimeLabel"
		    />
		<EditText 
	        android:id="@+id/dateTimeEdit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/dateTimeHint"
	        android:inputType="datetime"
	        />
		<Button 
		    android:id="@+id/dateTimeChooseButton"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/dateTimeChooseButton"
		    />
		<!-- Datetime field ends -->	
		<!-- Location text field starts -->	
		<TextView 
		    android:id="@+id/locationText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		  	android:text="@string/locationLabel"
		    />
		<EditText 
	        android:id="@+id/locationEdit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/locationHint"
	        />
		<!-- Location text field ends -->	
	 	<Button 
	        android:id="@+id/inviteFriendsButton"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:text="@string/inviteFriendsButton"
	        />	    
	</LinearLayout>
</ScrollView>